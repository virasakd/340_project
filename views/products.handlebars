<h1 class="title">Products</h1>

<table id= "products_table">
    {{!-- Display the columns --}}
    <thead>
	<tr>
	    <th>ID</th>
            <th>Name</th>
	    <th>Price</th>
            <th>Main Ingredient</th>
    	</tr>
    </thead>

    <tbody>
	{{!-- Print the relevant attributes for each row in order --}}
	{{#each data}}
	<tr>
		<td>{{this.product_id}}</td>
		<td>{{this.product_name}}</td>
		<td>{{this.price}}</td>
		<td>{{this.main_ingredient}}</td>
	</tr>
	{{/each}}
    </tbody>
</table>

<div>
    <p>Instructions for adding Products:<P>
    <p>All inputs must be filled in.</p>
    <p>Price must be a number greater than or equal to 0.</p>
</div>

{{!-- Form to add a product --}}
<form id="addProduct">
    <legend><h3>Add Product</h3></legend>
    <fieldset>
        <label>Name</label> <input type="text" id="inputName">
        <label>Price</label> <input type="number" step = "0.01" placeholder = "0.00" id="inputPrice" min = "0" required>
        <label>Main Ingredient</label> <input type="text" id="mainIng">
    </fieldset>
    <input type="submit" value="Add Product">
</form>


<script src="./js/add_product.js"></script>