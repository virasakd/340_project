<h1 class="title">Orders</h1>

<table id = "orders_table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Total Cost</th>
            <th>Employee ID</th>
            <th>Employee Name</th>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.order_id}}</td>
            <td>{{this.order_date}}</td>
            <td>{{this.total_cost}}</td>
            <td>{{this.employee_id}}</td>
            <td>{{this.employee_name}}</td>
            <td>{{this.customer_id}}</td>
            <td>{{this.customer_name}}</td>
            <td><button>Delete</button></td>

        </tr>
        {{/each}}
    </tbody>
    
</table>

<label>Filter Orders by Date</label>
<input type="date">
<button type="button">Reset date</button>

<form id="addOrder">
    <legend><h3>Add Order</h3></legend>
    <fieldset>
        <label>Date</label> <input type="date" id="date_input">

        <label>Total Cost</label> <input type="number" id = "cost_input">

        <label>Employee ID</label>
        <select name = "id" id="empID">
            {{#each empInfo}}
            <option value = "{{this.employee_id}}">{{this.employee_name}}</option>
            {{/each}}
        </select>
        <label>Customer ID</label>

        <select name = "id" id="custID">
            {{#each custInfo}}
            <option value = "{{this.customer_id}}">{{this.customer_name}}</option>
            {{/each}}
        </select>

    </fieldset>
    <input type="submit" value="Add Order">
</form>



<form id="updateOrder">
    <legend><h3>Update Order</h3></legend>
    <fieldset>
        <label>Order ID</label>
        <select name = "id" id="orderID">
            <option value = "1">1</option>
            <option value = "2">2</option>
            <option value = "3">3</option>
        </select>
        <label>Date</label> <input type="date">
        <label>Total Cost</label> <input type="number">
        <label>Employee ID</label>
        <select name = "id" id="empID">
            <option value = "NULL">NULL</option>
            {{#each empInfo}}
            <option value = "{{this.employee_id}}">{{this.employee_name}}</option>
            {{/each}}
        </select>
        <label>Customer ID</label>
        <select name = "id" id="custID">
             {{#each custInfo}}
            <option value = "{{this.customer_id}}">{{this.customer_name}}</option>
            {{/each}}
        </select>
    </fieldset>
</form>

<script src = "./orders.js"></script>