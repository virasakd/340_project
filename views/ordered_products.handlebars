<h1 class="title">Ordered Products</h1>

<table id = "ordered_products_table">
    <thead>
    {{!-- Display the columns --}}
	<tr>
	    <th>ID</th>
	    <th>Order ID</th>
	    <th>Product ID</th>
       	    <th>Product Name</th>
	    <th>Quantity</th>
	    <th>Cost</th>    
	</tr>
   </thead>

   <tbody>
	{{!-- Print the relevant attributes for each row in order --}}
	{{#each data}}
	<tr>
	    <td>{{this.ordered_product_id}}</td>
	    <td>{{this.order_id}}</td>
	    <td>{{this.product_id}}</td>
	    <td>{{this.product_name}}</td>
	    <td>{{this.quantity}}</td>
	    <td>{{this.cost}}</td>
	</tr>
	{{/each}}
   </tbody>

</table>

{{!-- Form to add an ordered product --}}
<form id="addOrderedProd">
    <legend><h3>Add Ordered Product</h3></legend>
    <fieldset>
        <label>Product ID</label>
        <select name = "prodID" id="prodID">
	    {{!-- Display product names for dropdown --}}
	    {{#each prodInfo}}
            <option value = {{this.product_id}}>{{this.product_name}}</option>
	    {{/each}}
        </select>
        <label>Order ID</label>
        <select name = "orderID" id="orderID">
	    {{!-- Display order id's for dropdown --}}
	    {{#each orderInfo}}
            <option value = "{{this.order_id}}">{{this.order_id}}</option>
	    {{/each}}
        </select>
        <label>Quantity</label> <input type="number" id="quantity">
        <label>Cost</label> <input type="number" step="0.01" placeholder = "0.00" id="cost">
    </fieldset>
    <input type="submit" value="Add Ordered Product">
</form>

<script src="./js/add_ordered_product.js"></script>

